<div class="problem {{category}} {{#if solved}}complete{{/if}}" data-toggle="collapse" data-target="#{{pid}}" aria-expanded="{{#if solved}}false{{else if collapse}}false{{else}}true{{/if}}" id="{{pid}}-title">
  <div class="icon">
    {{#if solved}}
      <i class="material-icons">&#xE5CA;</i>
    {{else}}
      <i class="material-icons">{{{icon}}}</i>
    {{/if}}

  </div>
  <text class="name">{{name}}</text>
  <text class="solves">{{solves}} solves</text>
  <text class="value">{{score}} XP</text>
</div>
<div class="problem-slide {{category}} collapse {{#if solved}}complete{{else if collapse}} {{else}}in{{/if}}" id="{{pid}}" data-category="{{category}}" data-percent="{{percent}}">
  <div class="selectbox">
    <div class="select active" data-tab="problem">
      <button><i class="material-icons">&#xE153;</i></button>
    </div>
    <div class="select" data-tab="hint">
      <button><i class="material-icons">&#xE887;</i></button>
    </div>
    <div class="select" data-tab="feedback">
      <button><i class="material-icons">&#xE8DD;</i></button>
    </div>
  </div>
  <div class="body problem-tab">
    <h4 class="text">{{{description}}}</h4>
    {{#if solved}}
    {{else}}
      <div class="input-group input-group-sm problem-submit">
        <input type="text" placeholder="Flag" class="form-control" data-pid="{{pid}}">
        <span class="input-group-btn">
            <button class="btn purple sm active" type="submit">SUBMIT</button>
        </span>
      </div>
      <span class="help-block"><h4></h4></span>
    {{/if}}
  </div>
  <div class="body hidden hint-tab">
    <h4 class="text">{{{hint}}}</h4>
  </div>
  {{#if solved}}
    <div class="body hidden feedback-tab">
      <div class="form-group" id="inputGroup">
        <div class="row">
          <div class="col-sm-6">
            <h4 class="text">How much time did you spend?</h4>
          </div>
          <div class="col-sm-6 vert-middle" style="margin-top: 0px">
            <input id="{{pid}}time" class="sliderTime" data-slider-id="ex1Slider" type="text" data-slider-min="0" data-slider-max="240" data-slider-step="15" data-slider-value="0" />
            <text class="h4 sliderTimeDisplay">0:00</text>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-6">
            <h4 class="text">How easy or challenging was the problem?</h4>
          </div>
          <div class="col-sm-6 vert-middle" style="margin-top: 0px">
            <input id="{{pid}}difficulty" class="sliderDifficulty" data-slider-id="ex1Slider" type="text" data-slider-min="1" data-slider-max="5" data-slider-step="1" data-slider-value="3" />
            <text class="h4 sliderDifficultyDisplay">Average</text>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-6">
            <h4 class="text">Rate your overall interest in the problem.</h4>
          </div>
          <div class="col-sm-6 vert-middle" style="margin-top: 0px">
            <input id="{{pid}}interest" class="sliderInterest" data-slider-id="ex1Slider" type="text" data-slider-min="1" data-slider-max="5" data-slider-step="1" data-slider-value="3" />
            <text class="h4 sliderInterestDisplay">Average</text>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-6">
            <h4 class="text">Would you want to see a problem like this in a future CTF?</h4>
          </div>
          <div class="col-sm-6 vert-middle" style="margin-top: 0px">
            <div class="btn-group radio" data-toggle="buttons">
              <label class="btn btn-primary">
                <input type="radio" name="options" autocomplete="off" checked id="{{pid}}yes">Yes
              </label>
              <label class="btn btn-primary">
                <input type="radio" name="options" autocomplete="off" id="{{pid}}no">No
              </label>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-2"></div>
          <div class="col-sm-8">
            <button type="submit" class="btn purple sm expand centerpad feedback-button" data-pid="{{pid}}"><i class="material-icons">&#xE0B7;</i>SEND FEEDBACK</button>
            <span class="help-block" id="{{pid}}help"><h4></h4></span>
          </div>
          <div class="col-sm-2"></div>
        </div>
      </div>
    </div>
  {{/if}}
</div>
